pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        TERRAFORM_EXECUTABLE = '/usr/bin/terraform'
        CREDENTIALS_ID = 'AWS_ACCESS_KEY_ID'
        SECRET_CREDENTIALS_ID = 'AWS_SECRET_ACCESS_KEY'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform') {
            steps {
                script {
                    try {
                        withCredentials([
                            [credentialsId: env.CREDENTIALS_ID, variable: 'AWS_ACCESS_KEY_ID'],
                            [credentialsId: env.SECRET_CREDENTIALS_ID, variable: 'AWS_SECRET_ACCESS_KEY']
                        ]) {
                            sh "${env.TERRAFORM_EXECUTABLE} init -no-color"
                            sh "${env.TERRAFORM_EXECUTABLE} plan -no-color"
                            sh "${env.TERRAFORM_EXECUTABLE} apply --auto-approve -no-color"
                        }
                    } catch (Exception e) {
                        echo "Error occurred during Terraform execution: ${e}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }

        stage('Destroy Terraform Resources') {
            steps {
                script {
                    try {
                        input message: 'Â¿Quieres destruir los recursos de Terraform?', ok: 'Destruir'
                        sh "${env.TERRAFORM_EXECUTABLE} destroy --auto-approve -no-color"
                    } catch (Exception e) {
                        echo "Error occurred during Terraform destroy: ${e}"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
    }
}
